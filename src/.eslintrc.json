{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["airbnb", "airbnb/hooks"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["/docs"],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "new-cap":"off",
        "max-len": "off",
        "no-underscore-dangle":  ["error", { "allow": ["_id"] }],
        "no-unused-expressions": "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ]
    }
}
